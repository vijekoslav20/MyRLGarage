<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:padding="16dp"
    tools:context=".activities.PresetDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleBarLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitleTextView"
            android:text="@string/add_new_preset"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/deletePresetBtn"
            android:src="@drawable/baseline_delete_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/savePresetBtn"
            android:src="@drawable/baseline_check_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBarLayout"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:layout_marginVertical="12dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded_corner">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/presetNameEditText"
            android:hint="@string/preset_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginVertical="1dp"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/teamEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="2dp"
                android:hint="@string/orange_blue_team"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/bodyEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/body"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/decalEditText"
                android:hint="@string/decal"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/primaryColorEditText"
                android:hint="@string/primary_color_paint_finish"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/accentColorEditText"
                android:hint="@string/accent_color_paint_finish"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/wheelsEditText"
                android:hint="@string/wheels"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rocketBoostEditText"
                android:hint="@string/rocket_boost"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/trailEditText"
                android:hint="@string/trail"
                android:textSize="16sp"
                android:layout_marginVertical="2dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>